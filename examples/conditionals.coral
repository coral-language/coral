// If expressions
fn checkAge(age: Int) -> String do
  if age < 0 do
    return "Invalid age"
  else
    if age < 18 do
      return "Minor"
    else
      if age < 65 do
        return "Adult"
      else
        return "Senior"
      end
    end
  end
end

println(checkAge(10))
println(checkAge(25))
println(checkAge(70))
println(checkAge(-5))

// If as expression
age = 25
status = if age >= 18 do
  "Adult"
else
  "Minor"
end

println("\nStatus: {status}")